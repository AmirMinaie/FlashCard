{
  "database": {
    "driver": "sqlite",
    "DBName": "Flashcard.db"
  },
  "loadSeedData": 0,

  "filters_FlashCard_List": [
    {
      "id": "today_review",
      "icon": "calendar-today",
      "text": "today review",
      "color": "primary",
      "order": [
        { "field": "id", "direction": "desc" }
      ],
      "where": [
        {
          "field": "last_review_date",
          "op": "lte",
          "value": "today"
        }
      ]
    },
    {
      "id": "tomorrow_review",
      "icon": "calendar-arrow-right",
      "text": "tomorrow review",
      "color": "accent",
      "order": [
        { "field": "id", "direction": "desc" }
      ],
      "where": [
        {
          "field": "last_review_date",
          "op": "eq",
          "value": "tomorrow"
        }
      ]
    },
    {
      "id": "all_cards",
      "icon": "format-list-bulleted",
      "text": "all cards",
      "color": "success",
      "order": [
        { "field": "id", "direction": "desc" }
      ]
    },
    {
      "id": "today_added",
      "icon": "plus-circle",
      "text": "today added",
      "color": "warning",
      "order": [
        { "field": "id", "direction": "desc" }
      ],
      "where": [
        {
          "field": "created_at",
          "op": "gte",
          "value": "today_start"
        }
      ]
    },
    {
      "id": "no_review",
      "icon": "alert-circle",
      "text": "no review",
      "color": "error",
      "order": [
        { "field": "id", "direction": "desc" }
      ],
      "where": [
        {
          "field": "last_review_date",
          "op": "is_null",
          "value": null
        }
      ]
    }
  ],
  "Defulte_filters_FlashCard_List" : "all_cards",
  "Valid_file_format_mapping": [
    {
      "extension": ".jpg",
      "format_name": "JPEG",
      "category": "image",
      "mime_type": "image/jpeg",
      "description": "Joint Photographic Experts Group"
    },
    {
      "extension": ".jpeg",
      "format_name": "JPEG",
      "category": "image",
      "mime_type": "image/jpeg",
      "description": "Joint Photographic Experts Group"
    },
    {
      "extension": ".png",
      "format_name": "PNG",
      "category": "image",
      "mime_type": "image/png",
      "description": "Portable Network Graphics"
    },
    {
      "extension": ".mp3",
      "format_name": "MP3",
      "category": "audio",
      "mime_type": "audio/mpeg",
      "description": "MPEG Audio Layer III"
    },
    {
      "extension": ".wav",
      "format_name": "WAV",
      "category": "audio",
      "mime_type": "audio/wav",
      "description": "Waveform Audio File Format"
    },
    {
      "extension": ".mp4",
      "format_name": "MP4",
      "category": "video",
      "mime_type": "video/mp4",
      "description": "MPEG-4 Part 14"
    }
  ]
}