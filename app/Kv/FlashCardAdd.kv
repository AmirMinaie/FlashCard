<FlashCardAdd>:
    name: "FlashCardAdd"

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Add Flashcard"
            left_action_items: [["arrow-left", lambda x: app.go_menu()]]
            pos_hint: {"top": 1}  # چسبیده به بالا
            md_bg_color: app.theme_cls.primary_color
            elevation: 10

        MDBoxLayout:
            orientation: "vertical"
            padding: "24dp"
            spacing: "16dp"

            MDTextField:
                id: title_field
                hint_text: "Title"
                mode: "rectangle"

            MDTextField:
                id: type_field
                hint_text: "Type (e.g., Vocabulary, Grammar)"
                mode: "rectangle"

            MDTextField:
                id: description_field
                hint_text: "Description"
                mode: "rectangle"

            MDTextField:
                id: example_field
                hint_text: "Example"
                mode: "rectangle"

            MDTextField:
                id: voice_field
                hint_text: "Voice URL or Record"
                mode: "rectangle"

            MDBoxLayout:
                size_hint_y: None
                height: "48dp"
                spacing: "16dp"

                MDRaisedButton:
                    text: "Add & New"
                    on_release: root.add_card(close_after=False)

                MDRaisedButton:
                    text: "Add & Close"
                    on_release: root.add_card(close_after=True)
