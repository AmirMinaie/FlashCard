<FlashCard>:
    canvas.before:
        Color:
            rgba: 0.98, 0.95, 0.9, 1  # پس‌زمینه روشن
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 20

        Label:
            text: root.question_text or "Question will appear here"
            font_size: 28
            bold: True
            color: 0.1, 0.1, 0.4, 1
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            text: root.answer_text or "Answer will appear here"
            font_size: 24
            color: 0.2, 0.2, 0.2, 1
            size_hint_y: None
            height: self.texture_size[1]

        Button:
            text: "Next Card"
            font_size: 24
            size_hint_y: None
            height: 50
            background_color: 0.4, 0.6, 0.9, 1
            color: 1,1,1,1
            on_release: root.next_card()
